													datatable = "<tr>";
													datatable += '<td><i class="splashy-close checklistitem" idreg="'+item.id_registro+'"></i></td>';
													datatable += "<td>"+item.nomeetapa+"</td>";
													datatable += "<td>"+item.duein+"</td>";
													datatable +=  "</tr>";
											
											  $('#checklistdatatable > tbody:last').append(datatable);

									    	
							    	    });
